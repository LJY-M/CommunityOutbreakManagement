<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_blue"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/family_info_layout_name"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="姓名：888888"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/family_info_layout_remind"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/shadow_green"
            android:textSize="20sp"
            android:text="提醒上报"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/family_info_layout_temperature"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:text="今日体温：???"
        android:gravity="center"/>




</LinearLayout>